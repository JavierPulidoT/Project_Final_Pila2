                 <div class="input-field">
                        <label for="project-symbol">Simbolo</label>
                        <input
                        placeholder="Ingrese simbolo"
                         type="text" 
                        id="coin-symbol" 
                        name="symbol"
                        class="validate"
                        value="{{project.symbol}}"
                        required
                        />
                        <span
                         class="helper-text" 
                         data-error="Debe Ingresar el simbolo"
                         data-success="Correcto"></span>
                        {{#if errorModel.symbolError}}
                        <span style="color:red">
                            Error: {{errorModel.symbolError}}</span>
                        {{/if}}
                    </div>

                    <div class="input-field">
                        <label for="project-name">Nombre de la Crypto</label>
                        <input
                        placeholder="Ingrese nombre de la crypto/coin"
                         type="text" 
                        id="coin-name" 
                        name="name"
                        class="validate"
                        value="{{project.name}}"
                        required
                        />
                        <span
                         class="helper-text" 
                         data-error="Debe Ingresar nombre de la crypto"
                         data-success="Correcto"></span>
                        {{#if errorModel.nameError}}
                        <span style="color:red">
                            Error: {{errorModel.nameError}}</span>
                        {{/if}}
                    </div>

                   <div class="input-field">
                        <label for="project-quantity"> Cantidad</label>
                        <input
                        placeholder="25.89"
                         type="text" 
                        id="coin-quantity" 
                        name="quantity"
                         class="validate"
                        value="{{project.quantity}}"
                        required
                        />
                        <span
                         class="helper-text" 
                         data-error="Debe Ingresar Cantidad"
                         data-success="Correcto"></span>
                        {{#if errorModel.quantityError}}
                        <span style="color:red">
                            Error: {{errorModel.quantityError}}</span>
                        {{/if}}
                    </div>

            </div>
            <div class="card-action">
                <button type="submit" 
                class="blue darken-3 waves-effect waves-light btn">
                <i class="material-icons left">note_add</i>Guardar
                </button>
            </div>
